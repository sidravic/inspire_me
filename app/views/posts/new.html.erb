<style>
  .user-photo{
    border-top: 4px solid maroon;
    border-left:2px solid #444444;
    border-right:2px solid #444444;
    border-bottom:2px solid #444444;
    color:#444444;
    width: 60%;
    padding:5px;
    margin-left: 250px;
    margin-bottom:1em;
    margin-top: 1em;

  }

  .user-photo label{
    font-size: 16px;
    padding:5px;
    margin-top:0.5em;
  }

  .user-photo .elem-field{
    padding:5px;
  }

  .user-photo input[type='text'], .user-signup input[type='password']{
    height:25px;
    font-weight: bold;
  }

</style>


<div class="user-photo">
  <% form_for :post, :url => posts_url, :html => {:multipart => true} do |f| %>
    <div class="elem-set">
      <label for="title">Post Title :</label>
      <div class="elem-field">
        <%= f.text_field :title, :size => 95  %>
        <%= error_message_on :post,:title %>
      </div>
    </div>

    <% fields_for :photo do |photo_form| %>

      <div class="elem-set">
        <label for="photo_title">Photo Title :</label>
        <div class="elem-field">
          <%= photo_form.text_field :photo_title, :size => 95  %>          
        </div>
      </div>

      <div class="elem-set">
        <label for="photo_taken_with"> Photo Taken with : </label>
        <div class="elem-field">
          <%= photo_form.text_field :photo_taken_with, :size => 95 %>
        </div>
      </div>

      <div class="elem-set">
        <label for="photo_taken_on"> Photo Taken on : </label>
        <div class="elem-field">
          <%= date_select :photo, :photo_taken_on, {:user_month_number => true } %>
        </div>
      </div>

      <div class="elem-set">
        <label for="photo_taken_on"> Photo : </label>
        <div class="elem-field">
          <%= photo_form.file_field :image %>
          <%= error_message_on :post, :photos %>
        </div>
      </div>
    <% end %>

    <div class="elem-set">
      <div class="elem-field">
        <%= f.submit "Upload" %>
      </div>
    </div>
  <% end  %>
</div>

